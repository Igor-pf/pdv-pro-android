<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KioskPDV" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Estilo Divino para Dialogs -->
    <style name="Theme.KioskPDV.Dialog.Divine" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Forçar Fundo Branco (Light) -->
        <item name="colorSurface">#FFFFFF</item>
        <item name="android:background">#FFFFFF</item>
        
        <!-- Cantos Arredondados -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.KioskPDV.Dialog</item>
        
        <!-- Textos -->
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.KioskPDV.Dialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.KioskPDV.Dialog.Body</item>
        
        <!-- Botões -->
        <item name="buttonBarPositiveButtonStyle">@style/Widget.KioskPDV.Button.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.KioskPDV.Button.TextButton</item>
    </style>

    <style name="ShapeAppearance.KioskPDV.Dialog" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="TextAppearance.KioskPDV.Dialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">#111827</item> <!-- Preto Suave -->
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.KioskPDV.Dialog.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#374151</item> <!-- Cinza -->
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="Widget.KioskPDV.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/purple_700</item> <!-- Cor Primária -->
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
